<Defs>

    <HediffDef ParentName="PsiTechBuffBase">
        <defName>PTPsychicSuppression</defName>
        <label>Psychically Suppressed</label>
        <labelNoun>A psychic suppression</labelNoun>
        <description>A state of decreased psychic sensitivity, induced by a psion.</description>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>
                    <min>3000</min>
                    <max>4200</max>
                </disappearsAfterTicks>
            </li>
        </comps>
        <stages>
            <li>
                <statOffsets>
                    <PsychicSensitivity>-1</PsychicSensitivity>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>

    <HediffDef ParentName="PsiTechBuffBase">
        <defName>PTPsychicSilence</defName>
        <label>Psychically Silenced</label>
        <labelNoun>A psychic suppression</labelNoun>
        <description>A state of massively decreased psychic sensitivity, induced by a psion.</description>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>
                    <min>3600</min>
                    <max>4800</max>
                </disappearsAfterTicks>
            </li>
        </comps>
        <stages>
            <li>
                <statOffsets>
                    <PsychicSensitivity>-2</PsychicSensitivity>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>
    
</Defs>