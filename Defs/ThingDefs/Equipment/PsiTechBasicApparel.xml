<Defs>

    <!-- Cultist set - robes and hood -->
    <ThingDef Name="PTRobeBase" ParentName="PTTailoredBase" Abstract="True">
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.05</drawSize>
        </graphicData>
        <recipeMaker>
            <researchPrerequisite>PTPsychicEquipment</researchPrerequisite>
        </recipeMaker>
        <costStuffCount>80</costStuffCount>
        <costList>
            <PTAthenium>20</PTAthenium>
        </costList>
        <stuffCategories>
            <li>Fabric</li>
        </stuffCategories>
        <statBases>
            <MaxHitPoints>200</MaxHitPoints>
            <WorkToMake>10000</WorkToMake>
            <Mass>2.2</Mass>
            <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
            <EquipDelay>2.5</EquipDelay>
        </statBases>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>Shell</li>
            </layers>
            <useWornGraphicMask>true</useWornGraphicMask>
        </apparel>
    </ThingDef>

    <ThingDef ParentName="PTRobeBase">
        <defName>PTPsiRobe</defName>
        <label>psi robe</label>
        <description>A robe that enhances the psionic capabilities of the wearer.\n\nRobes don't have any special properties that make them suited for psionic usage, but they just seem fitting.</description>
        <equippedStatOffsets>
            <PsychicSensitivity>0.40</PsychicSensitivity>
        </equippedStatOffsets>
        <graphicData>
            <texPath>Things/Equipment/PsiRobe/Robe</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.05</drawSize>
        </graphicData>
        <apparel>
            <wornGraphicPath>Things/Equipment/PsiRobe/Robe</wornGraphicPath>
        </apparel>
    </ThingDef>

    <ThingDef ParentName="PTRobeBase">
        <defName>PTFocusRobe</defName>
        <label>focus robe</label>
        <description>A robe that enhances the psi energy regeneration of the wearer.\n\nRobes don't have any special properties that make them suited for psionic usage, but they just seem fitting.</description>
        <equippedStatOffsets>
            <PTPsiEnergyRegeneration>0.50</PTPsiEnergyRegeneration>
            <PsychicSensitivity>0.20</PsychicSensitivity>
        </equippedStatOffsets>
        <graphicData>
            <texPath>Things/Equipment/FocusRobe/Robe</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.05</drawSize>
        </graphicData>
        <apparel>
            <wornGraphicPath>Things/Equipment/FocusRobe/Robe</wornGraphicPath>
        </apparel>
    </ThingDef>

    <ThingDef ParentName="PTRobeBase">
        <defName>PTCapacitorRobe</defName>
        <label>capacitor robe</label>
        <description>A robe that enhances the max psi energy of the wearer.\n\nRobes don't have any special properties that make them suited for psionic usage, but they just seem fitting.</description>
        <equippedStatOffsets>
            <PTMaxPsiEnergy>50</PTMaxPsiEnergy>
            <PsychicSensitivity>0.20</PsychicSensitivity>
        </equippedStatOffsets>
        <graphicData>
            <texPath>Things/Equipment/CapacitorRobe/Robe</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.05</drawSize>
        </graphicData>
        <apparel>
            <wornGraphicPath>Things/Equipment/CapacitorRobe/Robe</wornGraphicPath>
        </apparel>
    </ThingDef>

    <ThingDef ParentName="PTHatBase">
        <defName>PTPsiHood</defName>
        <label>psi hood</label>
        <description>A hood that enhances the psionic capabilities of the wearer.\n\nHoods don't have any special properties that make them suited for psionic usage, but they just seem fitting.</description>
        <recipeMaker>
            <researchPrerequisite>PTPsychicEquipment</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Equipment/Hood/Hood</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <costStuffCount>25</costStuffCount>
        <costList>
            <PTAthenium>10</PTAthenium>
        </costList>
        <stuffCategories>
            <li>Fabric</li>
        </stuffCategories>
        <statBases>
            <WorkToMake>1200</WorkToMake>
            <Mass>0.07</Mass>
            <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
            <EquipDelay>0.8</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <PsychicSensitivity>0.20</PsychicSensitivity>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>UpperHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Equipment/Hood/Hood</wornGraphicPath>
            <useWornGraphicMask>true</useWornGraphicMask>
            <layers>
                <li>Overhead</li>
            </layers>
            <tags>
                <li>ExoticPsiLowTier</li>
            </tags>
        </apparel>
    </ThingDef>

</Defs>