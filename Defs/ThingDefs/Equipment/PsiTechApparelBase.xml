<Defs>
    
    <ThingCategoryDef>
        <defName>PTPsi</defName>
        <label>psi</label>
        <parent>Apparel</parent>
    </ThingCategoryDef>

    <ThingCategoryDef>
        <defName>PTPsiHeadgear</defName>
        <label>psi headgear</label>
        <parent>PTPsi</parent>
    </ThingCategoryDef>
    
    <ThingDef Name="PTApparelBase" ParentName="ApparelBase" Abstract="True">
        <recipeMaker>
            <workSkill>Crafting</workSkill>
            <recipeUsers>
                <li>PTPsychicWorkbench</li>
            </recipeUsers>
        </recipeMaker>
        <tradeability>Sellable</tradeability>
        <techLevel>Spacer</techLevel>
        <generateCommonality>0.001</generateCommonality>
    </ThingDef>

    <ThingDef Name="PTTailoredBase" ParentName="PTApparelBase" Abstract="True">
        <thingCategories>
            <li>PTPsi</li>
        </thingCategories>
        <recipeMaker>
            <workSpeedStat>WorkSpeedGlobal</workSpeedStat>
            <effectWorking>Tailor</effectWorking>
            <soundWorking>Recipe_Tailor</soundWorking>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
            <defaultIngredientFilter>
                <categories>
                    <li>Root</li>
                </categories>
                <disallowedThingDefs>
                    <li>Gold</li>
                    <li>Silver</li>
                    <li>Plasteel</li>
                    <li>Jade</li>
                    <li>Uranium</li>
                </disallowedThingDefs>
            </defaultIngredientFilter>
        </recipeMaker>
        <apparel>
            <tags>
                <li>ExoticPsiLowTier</li>
                <li>Psychic</li>
            </tags>
        </apparel>
    </ThingDef>

    <ThingDef Name="PTMachinedBase" ParentName="PTApparelBase" Abstract="True">
        <thingCategories>
            <li>PTPsi</li>
        </thingCategories>
        <recipeMaker>
            <workSpeedStat>WorkSpeedGlobal</workSpeedStat>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Machining</soundWorking>
            <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
            <defaultIngredientFilter>
                <categories>
                    <li>Root</li>
                </categories>
                <disallowedThingDefs>
                    <li>Gold</li>
                    <li>Silver</li>
                    <li>Plasteel</li>
                    <li>Jade</li>
                    <li>Uranium</li>
                </disallowedThingDefs>
            </defaultIngredientFilter>
        </recipeMaker>
        <comps>
            <li Class="CompProperties_Forbiddable"/>
        </comps>
    </ThingDef>

    <ThingDef Name="PTHatBase" ParentName="PTApparelBase" Abstract="True">
        <thingCategories>
            <li>PTPsiHeadgear</li>
        </thingCategories>
        <recipeMaker>
            <workSpeedStat>WorkSpeedGlobal</workSpeedStat>
            <effectWorking>Tailor</effectWorking>
            <soundWorking>Recipe_Tailor</soundWorking>
            <defaultIngredientFilter>
                <categories>
                    <li>Root</li>
                </categories>
                <disallowedThingDefs>
                    <li>Gold</li>
                    <li>Silver</li>
                    <li>Plasteel</li>
                    <li>Jade</li>
                    <li>Uranium</li>
                </disallowedThingDefs>
            </defaultIngredientFilter>
        </recipeMaker>
    </ThingDef>

    <ThingDef Name="PTHelmetBase" ParentName="PTHatBase" Abstract="True">
        <recipeMaker>
            <workSpeedStat>WorkSpeedGlobal</workSpeedStat>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Machining</soundWorking>
        </recipeMaker>
        <comps>
            <li Class="CompProperties_Forbiddable"/>
        </comps>
    </ThingDef>
    
</Defs>