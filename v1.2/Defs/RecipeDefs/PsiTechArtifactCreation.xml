<Defs>

    <RecipeDef>
        <defName>PTWorkbenchCreateInsanityLance</defName>
        <label>create psychic insanity lance</label>
        <description>Carefully assemble a psychic insanity lance from athenium and plasteel.</description>
        <jobString>Creating a psychic artifact.</jobString>
        <workAmount>2000</workAmount>
        <workSpeedStat>WorkSpeedGlobal</workSpeedStat>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_Machining</soundWorking>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>PTAthenium</li>
                    </thingDefs>
                </filter>
                <count>20</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Plasteel</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
        </ingredients>
        <products>
            <Apparel_PsychicInsanityLance>1</Apparel_PsychicInsanityLance>
        </products>
        <fixedIngredientFilter>
            <thingDefs>
                <li>PTAthenium</li>
                <li>Plasteel</li>
            </thingDefs>
        </fixedIngredientFilter>
        <researchPrerequisite>PTArtifactCreation</researchPrerequisite>
        <recipeUsers>
            <li>PTPsychicWorkbench</li>
        </recipeUsers>
    </RecipeDef>
    
